---
import '../styles/global.css';
import FooterForm from '../components/FooterForm.astro';
import PageEditor from '../components/PageEditor.astro';

interface Props {
  title: string;
  description?: string;
  type?: 'website' | 'article' | 'video';
  publishedDate?: string;
  modifiedDate?: string;
}

const {
  title,
  description = "The Washton Group provides confidential, individualized addiction treatment for executives, professionals, adolescents, and young adults. Dr. Arnold Washton and Dr. Lori Washton deliver specialized care with discretion and real-world practicality.",
  type = 'website',
  publishedDate,
  modifiedDate
} = Astro.props;

// Generate canonical URL
const canonicalURL = new URL(Astro.url.pathname, 'https://thewashtongroup.com');

// Organization schema (appears on all pages)
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "MedicalBusiness",
  "@id": "https://thewashtongroup.com/#organization",
  "name": "The Washton Group",
  "url": "https://thewashtongroup.com",
  "logo": "https://thewashtongroup.com/images/twg-logo.png",
  "description": "Confidential addiction treatment for executives and professionals",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Princeton",
    "addressRegion": "NJ",
    "addressCountry": "US"
  },
  "founder": [
    {
      "@type": "Person",
      "@id": "https://thewashtongroup.com/#dr-arnold-washton",
      "name": "Dr. Arnold Washton",
      "jobTitle": "Clinical Psychologist",
      "description": "Addiction specialist with over 50 years of experience"
    },
    {
      "@type": "Person",
      "@id": "https://thewashtongroup.com/#dr-lori-washton",
      "name": "Dr. Lori Washton",
      "jobTitle": "Clinical Psychologist",
      "description": "Specialist in women's treatment and adolescent care"
    }
  ],
  "medicalSpecialty": ["Addiction Medicine", "Psychiatry"],
  "availableService": [
    "Alcohol Treatment",
    "Moderation Management",
    "Cocaine and Opioid Treatment",
    "Women's Treatment",
    "Adolescent and Young Adult Treatment"
  ]
};

// WebSite schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "url": "https://thewashtongroup.com",
  "name": "The Washton Group",
  "description": "Confidential alcohol and addiction treatment for executives and professionals",
  "publisher": { "@id": "https://thewashtongroup.com/#organization" }
};

// BreadcrumbList schema
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbItems = [
  { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://thewashtongroup.com" }
];

let currentPath = "https://thewashtongroup.com";
pathSegments.forEach((segment, index) => {
  currentPath += `/${segment}`;
  const name = segment.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
  breadcrumbItems.push({
    "@type": "ListItem",
    "position": index + 2,
    "name": name,
    "item": currentPath
  });
});

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems
};

// Combine all schemas
const schemas = [organizationSchema, websiteSchema, breadcrumbSchema];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content={type === 'article' ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="The Washton Group" />
    <meta property="og:image" content="https://thewashtongroup.com/images/twg-logo.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Schema.org Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(schemas)} />
  </head>
  <body>
    <header class="site-header">
      <nav class="nav">
        <div class="logo-section">
          <a href="/" class="logo-link">
            <img src="/images/twg-logo.png" alt="The Washton Group" class="logo-img" loading="lazy" />
          </a>
        </div>
        <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <div class="nav-links" aria-expanded="false">
          <a href="/about">About</a>
          <div class="dropdown">
            <button class="dropdown-toggle" aria-expanded="false" aria-haspopup="true">
              Services
              <span class="dropdown-arrow">â–¼</span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><a href="/alcohol-treatment" role="menuitem">Alcohol Treatment</a></li>
              <li><a href="/moderation-management" role="menuitem">Moderation Management</a></li>
              <li><a href="/cocaine-opioids" role="menuitem">Cocaine & Opioids</a></li>
              <li><a href="/women-treatment" role="menuitem">Women's Treatment</a></li>
              <li><a href="/adolescent-young-adult" role="menuitem">Adolescents & Young Adults</a></li>
            </ul>
          </div>
          <a href="/articles">Articles</a>
          <a href="/videos">Videos</a>
          <a href="#consultation-form" class="cta-link">Get Help</a>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <FooterForm />
      <div class="footer-bottom">
        <p>&copy; 2024 The Washton Group. All rights reserved.</p>
        <p class="footer-privacy">All services are confidential and HIPAA compliant.</p>
      </div>
    </footer>
    <PageEditor client:load />
    <script>
      // Mobile menu toggle and dropdown
      document.addEventListener('DOMContentLoaded', () => {
        const menuToggle = document.querySelector('.mobile-menu-toggle');
        const navLinks = document.querySelector('.nav-links');
        const dropdownToggle = document.querySelector('.dropdown-toggle');
        const dropdownMenu = document.querySelector('.dropdown-menu');
        
        // Mobile menu toggle
        if (menuToggle && navLinks) {
          menuToggle.addEventListener('click', () => {
            const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
            menuToggle.setAttribute('aria-expanded', !isExpanded);
            navLinks.setAttribute('aria-expanded', !isExpanded);
          });

          // Close menu when clicking outside
          document.addEventListener('click', (e) => {
            if (!menuToggle.contains(e.target) && !navLinks.contains(e.target)) {
              menuToggle.setAttribute('aria-expanded', 'false');
              navLinks.setAttribute('aria-expanded', 'false');
            }
          });

          // Close menu when clicking a link
          navLinks.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
              menuToggle.setAttribute('aria-expanded', 'false');
              navLinks.setAttribute('aria-expanded', 'false');
            });
          });
        }

        // Dropdown functionality
        if (dropdownToggle && dropdownMenu) {
          dropdownToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            const isExpanded = dropdownToggle.getAttribute('aria-expanded') === 'true';
            dropdownToggle.setAttribute('aria-expanded', !isExpanded);
          });

          // Close dropdown when clicking outside
          document.addEventListener('click', (e) => {
            if (!dropdownToggle.contains(e.target) && !dropdownMenu.contains(e.target)) {
              dropdownToggle.setAttribute('aria-expanded', 'false');
            }
          });

          // Close dropdown when clicking a menu item
          dropdownMenu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
              dropdownToggle.setAttribute('aria-expanded', 'false');
            });
          });
        }
      });
    </script>
  </body>
</html>

<style>
  :global(html) {
    font-family: system-ui, -apple-system, sans-serif;
    line-height: 1.6;
    color: #1a1a1a;
  }

  :global(body) {
    margin: 0;
    padding: 0;
    background: #ffffff;
  }

  .site-header {
    border-bottom: 1px solid #e5e5e5;
    background: #ffffff;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-section {
    display: flex;
    align-items: center;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: inherit;
  }

  .logo-img {
    height: 50px;
    width: auto;
    display: block;
  }

  .logo-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1a1a1a;
    letter-spacing: -0.02em;
    margin: 0;
    line-height: 1.2;
  }

  .org-name {
    font-size: 0.75rem;
    color: #6a6a6a;
    margin: 0;
    font-weight: 400;
    line-height: 1.2;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 101;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: #1a1a1a;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .mobile-menu-toggle[aria-expanded="true"] span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .mobile-menu-toggle[aria-expanded="true"] span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle[aria-expanded="true"] span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a {
    color: #4a4a4a;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: #1a1a1a;
  }

  .dropdown {
    position: relative;
  }

  .dropdown-toggle {
    background: none;
    border: none;
    color: #4a4a4a;
    font-size: 0.95rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0;
    font-family: inherit;
    transition: color 0.2s;
  }

  .dropdown-toggle:hover {
    color: #1a1a1a;
  }

  .dropdown-arrow {
    font-size: 0.7rem;
    transition: transform 0.2s;
  }

  .dropdown-toggle[aria-expanded="true"] .dropdown-arrow {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 0.5rem;
    background: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    list-style: none;
    padding: 0.5rem 0;
    min-width: 220px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: opacity 0.2s, visibility 0.2s, transform 0.2s;
    z-index: 200;
  }

  .dropdown-toggle[aria-expanded="true"] + .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-menu li {
    margin: 0;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.75rem 1.5rem;
    color: #4a4a4a;
    text-decoration: none;
    font-size: 0.95rem;
    transition: background 0.2s, color 0.2s;
  }

  .dropdown-menu a:hover {
    background: #f8f8f8;
    color: #1a1a1a;
  }

  .cta-link {
    background: #2a2a2a;
    color: #ffffff !important;
    padding: 0.6rem 1.5rem;
    border-radius: 4px;
    font-weight: 500;
  }

  .cta-link:hover {
    background: #1a1a1a;
  }

  .site-footer {
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
  }

  .footer-bottom {
    padding: 2rem;
    text-align: center;
    color: #6a6a6a;
    font-size: 0.9rem;
    border-top: 1px solid #e5e5e5;
  }

  .footer-privacy {
    margin-top: 0.5rem;
    font-size: 0.85rem;
  }

  @media (max-width: 768px) {
    .nav {
      padding: 1rem 1.5rem;
      position: relative;
    }

    .logo-img {
      height: 40px;
    }

    .logo {
      font-size: 1.1rem;
    }

    .org-name {
      font-size: 0.7rem;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: #ffffff;
      border-bottom: 1px solid #e5e5e5;
      flex-direction: column;
      padding: 1rem 1.5rem;
      gap: 0;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      transition: max-height 0.3s ease, opacity 0.3s ease, padding 0.3s ease;
    }

    .nav-links[aria-expanded="true"] {
      max-height: 500px;
      opacity: 1;
      padding: 1rem 1.5rem;
    }

    .nav-links a {
      display: block;
      padding: 1rem 0;
      font-size: 1rem;
      border-bottom: 1px solid #f0f0f0;
      width: 100%;
    }

    .dropdown {
      width: 100%;
    }

    .dropdown-toggle {
      width: 100%;
      justify-content: space-between;
      padding: 1rem 0;
      border-bottom: 1px solid #f0f0f0;
      font-size: 1rem;
    }

    .dropdown-menu {
      position: static;
      width: 100%;
      margin-top: 0;
      margin-left: 1rem;
      box-shadow: none;
      border: none;
      border-left: 2px solid #e5e5e5;
      opacity: 0;
      max-height: 0;
      overflow: hidden;
      transform: none;
      transition: opacity 0.2s, max-height 0.3s ease;
    }

    .dropdown-toggle[aria-expanded="true"] + .dropdown-menu {
      opacity: 1;
      max-height: 400px;
    }

    .dropdown-menu li {
      width: 100%;
    }

    .dropdown-menu a {
      padding: 0.75rem 0;
      font-size: 0.95rem;
      border-bottom: none;
    }

    .nav-links a:last-child,
    .dropdown:last-child {
      border-bottom: none;
    }

    .nav-links .cta-link {
      margin-top: 0.5rem;
      text-align: center;
    }
  }
</style>
