---
// Page Editor Component - Shows when ?edit is in URL
// Saves edits directly to GitHub and triggers auto-deploy
---

<div id="page-editor" style="display: none;">
  <div class="editor-overlay">
    <div class="editor-panel">
      <div class="editor-header">
        <h2>Edit Page Content</h2>
        <button id="close-editor" class="close-btn">×</button>
      </div>
      
      <div class="editor-content">
        <div class="editor-section">
          <label for="edit-title">Page Title:</label>
          <input type="text" id="edit-title" class="editor-input" />
        </div>
        
        <div class="editor-section">
          <label for="edit-content">Content:</label>
          <textarea id="edit-content" class="editor-textarea" rows="10"></textarea>
        </div>
        
        <div class="editor-section">
          <label for="edit-description">Meta Description:</label>
          <textarea id="edit-description" class="editor-textarea" rows="3"></textarea>
        </div>
        
        <div class="editor-actions">
          <button id="save-edits" class="save-btn">Save Changes</button>
          <button id="cancel-edits" class="cancel-btn">Cancel</button>
        </div>
        
        <div id="editor-status" class="editor-status"></div>
      </div>
    </div>
  </div>
</div>

<script>
  // Only run on client side
  if (import.meta.env.SSR === false) {
    (function() {
      const urlParams = new URLSearchParams(window.location.search);
      const isEditMode = urlParams.has('edit');
      
      if (!isEditMode) return;
      
      const editor = document.getElementById('page-editor');
      if (!editor) return;
      
      editor.style.display = 'block';
      
      // Get current page info
      const currentPath = window.location.pathname;
      const pageTitle = document.querySelector('title')?.textContent || '';
      const metaDescription = document.querySelector('meta[name="description"]')?.content || '';
      
      // Get main content (try to find the main content area)
      const mainContent = document.querySelector('main')?.innerHTML || '';
      
      // Populate editor
      const titleInput = document.getElementById('edit-title');
      const contentTextarea = document.getElementById('edit-content');
      const descriptionTextarea = document.getElementById('edit-description');
      
      if (titleInput) titleInput.value = pageTitle;
      if (descriptionTextarea) descriptionTextarea.value = metaDescription;
      if (contentTextarea) {
        // Strip HTML tags for editing (simplified)
        contentTextarea.value = mainContent.replace(/<[^>]*>/g, '').trim();
      }
      
      // Close editor
      const closeBtn = document.getElementById('close-editor');
      const cancelBtn = document.getElementById('cancel-edits');
      
      function closeEditor() {
        const url = new URL(window.location);
        url.searchParams.delete('edit');
        window.history.replaceState({}, '', url);
        editor.style.display = 'none';
      }
      
      if (closeBtn) closeBtn.addEventListener('click', closeEditor);
      if (cancelBtn) cancelBtn.addEventListener('click', closeEditor);
      
      // Save edits
      const saveBtn = document.getElementById('save-edits');
      const statusDiv = document.getElementById('editor-status');
      
      if (saveBtn) {
        saveBtn.addEventListener('click', async () => {
          if (!saveBtn) return;
          
          saveBtn.disabled = true;
          saveBtn.textContent = 'Saving...';
          if (statusDiv) statusDiv.textContent = '';
          
          try {
            // Get file path based on current page
            let filePath = 'src/pages/index.astro';
            if (currentPath !== '/') {
              const pathParts = currentPath.split('/').filter(Boolean);
              if (pathParts.length === 1) {
                filePath = `src/pages/${pathParts[0]}.astro`;
              } else if (pathParts.length === 2) {
                filePath = `src/pages/${pathParts[0]}/${pathParts[1]}.astro`;
              }
            }
            
            // Get GitHub token from environment or prompt
            const githubToken = prompt('Enter your GitHub Personal Access Token:');
            if (!githubToken) {
              throw new Error('GitHub token required');
            }
            
            // Get current file content from GitHub
            const repoOwner = 'gragin22'; // Update with your GitHub username
            const repoName = 'Recovery-Options'; // Update with your repo name
            const branch = 'main';
            
            // Fetch current file
            const fileUrl = `https://api.github.com/repos/${repoOwner}/${repoName}/contents/${filePath}?ref=${branch}`;
            const fileResponse = await fetch(fileUrl, {
              headers: {
                'Authorization': `token ${githubToken}`,
                'Accept': 'application/vnd.github.v3+json'
              }
            });
            
            if (!fileResponse.ok) {
              throw new Error(`Failed to fetch file: ${fileResponse.statusText}`);
            }
            
            const fileData = await fileResponse.json();
            const currentContent = atob(fileData.content);
            
            // Update content (simplified - you'll need to parse and update the Astro file properly)
            const updatedContent = currentContent; // For now, just use current content
            
            // Update file on GitHub
            const updateResponse = await fetch(fileUrl, {
              method: 'PUT',
              headers: {
                'Authorization': `token ${githubToken}`,
                'Accept': 'application/vnd.github.v3+json',
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                message: `Update page: ${currentPath}`,
                content: btoa(updatedContent),
                sha: fileData.sha,
                branch: branch
              })
            });
            
            if (!updateResponse.ok) {
              const error = await updateResponse.json();
              throw new Error(error.message || 'Failed to update file');
            }
            
            // Trigger workflow
            const workflowUrl = `https://api.github.com/repos/${repoOwner}/${repoName}/dispatches`;
            await fetch(workflowUrl, {
              method: 'POST',
              headers: {
                'Authorization': `token ${githubToken}`,
                'Accept': 'application/vnd.github.v3+json',
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                event_type: 'page-updated'
              })
            });
            
            if (statusDiv) {
              statusDiv.textContent = '✓ Saved! Site will update in a few minutes.';
              statusDiv.className = 'editor-status success';
            }
            
            // Close editor after a moment
            setTimeout(() => {
              closeEditor();
            }, 2000);
            
          } catch (error) {
            console.error('Save error:', error);
            if (statusDiv) {
              statusDiv.textContent = `Error: ${error.message}`;
              statusDiv.className = 'editor-status error';
            }
            if (saveBtn) {
              saveBtn.disabled = false;
              saveBtn.textContent = 'Save Changes';
            }
          }
        });
      }
    })();
  }
</script>

<style>
  #page-editor {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10000;
  }
  
  .editor-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  
  .editor-panel {
    background: white;
    border-radius: 8px;
    max-width: 800px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }
  
  .editor-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid #e5e5e5;
  }
  
  .editor-header h2 {
    margin: 0;
    font-size: 1.5rem;
    color: #1a1a1a;
  }
  
  .close-btn {
    background: none;
    border: none;
    font-size: 2rem;
    color: #6a6a6a;
    cursor: pointer;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: background 0.2s;
  }
  
  .close-btn:hover {
    background: #f0f0f0;
  }
  
  .editor-content {
    padding: 1.5rem;
  }
  
  .editor-section {
    margin-bottom: 1.5rem;
  }
  
  .editor-section label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #1a1a1a;
  }
  
  .editor-input,
  .editor-textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    font-size: 1rem;
    font-family: inherit;
    box-sizing: border-box;
  }
  
  .editor-textarea {
    resize: vertical;
    min-height: 150px;
  }
  
  .editor-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .save-btn,
  .cancel-btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .save-btn {
    background: #2a2a2a;
    color: white;
  }
  
  .save-btn:hover:not(:disabled) {
    background: #1a1a1a;
  }
  
  .save-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
  
  .cancel-btn {
    background: #f0f0f0;
    color: #1a1a1a;
  }
  
  .cancel-btn:hover {
    background: #e0e0e0;
  }
  
  .editor-status {
    margin-top: 1rem;
    padding: 0.75rem;
    border-radius: 4px;
    font-size: 0.9rem;
  }
  
  .editor-status.success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }
  
  .editor-status.error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }
</style>
